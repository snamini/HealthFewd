<h1>Health Fewd!</h1>

<h2>Design Your Own Personal Weekly Menu!</h2>

<ul>
  {{#each options}}
    {{#unless this.devoured}}
      <li>
        {{this.foodname}}



<form action="healthFewds/update/{{this.id}}?_method=PUT" method="POST">
<input type="hidden" name="devoured" value="true">
<button type="submit">Devour!</button>
</form>


      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>foods that are devoured!</h2>

<ul>
  {{#each options}}
    {{#if this.devoured}}
      <li>
        {{this.foodname}}

        <form action="healthFewds/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Devoured!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Heath Fewd</h2>
<form class="create-update-form" action="healthFewds/create" method="POST">

  <div class="form-group">
    <label for="ca">Food Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Add Food</button>
</form>
